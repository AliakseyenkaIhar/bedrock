{% extends 'layouts/layout.singular.twig' %}

{% block content %}

	<div class="container">

		<!-- Page-{{ post.ID }}  -->
		<article
			class="{{ post.post_class }} w-full h-auto prose page-about"
			id="page-{{ post.ID }}"
		>

			<header class="entry-header page-about__header">
				<h1 class="entry-title page-about__title">{{ post.title }}</h1>
			</header><!-- .page-about__header -->

			<div class="entry-content page-about__content">
				{{ post.content|e('wp_kses_post') }}
			</div><!-- .page-about__content -->

			<footer class="entry-footer page-about__footer">
				{% if post.edit_link %}
					<a href="{{ post.edit_link }}">{{ __('Edit post', 'marusia') }}</a>
				{% endif %}
			</footer><!-- .page-about__footer -->

		</article><!-- #post-{{ post.ID }} -->

	</div>
{% endblock %}
