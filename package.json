{
  "name": "marusia-framework",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack --mode=development",
    "build": "cross-env NODE_ENV=production webpack --mode=production",
    "prod": "npm run build",
    "watch": "cross-env NODE_ENV=development webpack --mode=development --watch",
    "serve": "npm run watch",
    "browsers": "npx browserslist",
    "dump:dev": "wp db export databases/marusia.dev.sql",
    "dump:prod": "dotenv -- bash -c 'wp search-replace $APP_URL $PROD_URL --all-tables --export=databases/marusia.sql'",
    "dump:search": "dotenv -- bash -c 'wp search-replace $APP_URL $PROD_URL --all-tables'",
    "dump:searchback": "dotenv -- bash -c 'wp search-replace $PROD_URL $APP_URL --all-tables'",
    "dump": "npm run dump:search && dotenv -- bash -c 'wp db export databases/marusia.sql --exclude_tables=${DB_PREFIX}users,${DB_PREFIX}usermeta' && npm run dump:searchback"
  },
